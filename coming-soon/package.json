{
  "name": "kanzan.io",
  "version": "0.0.1",
  "description": "holding page for kanzan.io",
  "author": "Weave",
  "license": "ISC",
  "scripts": {
    "clean": "rimraf dist/js/*",
    "prebuild": "npm run clean -s",
    "build": "npm run build:scripts && npm run build:jekyll",
    "prebuild:scripts": "jshint src/js/**.js",
    "build:scripts": "browserify src/js/mine.js | uglifyjs > jekyll-site/js/build.min.js",

    "deploy": "git subtree push --prefix dist origin gh-pages"
  },
  "devDependencies": {
    "browserify": "^7.0.0",
    "jshint": "^2.5.10",
    "rimraf": "^2.2.8",
    "uglify-js": "^2.4.16",
  }
}
